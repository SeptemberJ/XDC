.SP-block .topBox{
    display: flex;
    flex-direction: column;
    align-items: center;
	width: 100%;
    height: 300rpx;
    background: #fff url('https://www.4008803828.com/wscxm/image/blue-bg2.png') no-repeat center top/contain;
	color: #fff;
}
.SP-block .topBox image{
	width: 200rpx;
    height: 200rpx;
    margin: 10rpx auto auto auto;
	z-index: 999;
}

.SP-block .item {
	display: flex;
    flex-direction: row;
    margin-top: 40rpx;
	margin-bottom: 20rpx;
	background: #fff;
	padding: 10rpx 20rpx;
	width:85%;
	/*border-left:5px solid #ff5f8e;*/
	background-color:#fff;
	-moz-box-shadow: 0px 0px 10px #bfbfbf; 
	box-shadow: 0px 0px 10px #bfbfbf;
}
.SP-block .item:nth-child(4n+0)
{
border-left:5px solid #3ddf94;
}
.SP-block .item:nth-child(4n+1)
{
border-left:5px solid #ff5f8e;
}
.SP-block .item:nth-child(4n+2)
{
border-left:5px solid #9c87ff;
}
.SP-block .item:nth-child(4n+3)
{
border-left:5px solid #fcc56a;
}

.SP-block .item .left{
	flex-grow:9;
}
.SP-block .item .right{
	flex-grow:1;
	display: flex;
    flex-direction: column;
    align-items: center;
	border-left: 1px solid #ccc;
	padding-top: 15rpx;
}
.SP-block .item .right image{
	display: block;
	float: right;
	width:100rpx;
	height: 100rpx;
}


.SP-block .item .header {
	font-size: 36rpx;
	color: #333;
	line-height: 72rpx;
	padding-left: 45rpx;
}
.SP-block .item .header input{
	display: inline-block;
}

.SP-block .item .header text {
	margin-right: 40rpx;
}
.SP-block .kind{
	font-weight: bold;
}
.SP-block .amount{
	font-weight: bold;
}
.SP-block .amountVal{
	font-weight: bold;
}

.SP-block .stock-list {
	display: flex;
    flex-direction: column;
    align-items: center;
	margin-bottom: 56px;
	margin-top: 100rpx;
}

.SP-block .stock-bt{
	display: flex;
    flex-direction: row;
    align-items: center;
	width: 90%;
	margin: 0 auto;
}
.SP-block .stock-save {
	width:100%;
	background-color: rgb(247,131,106);
	/*background: #f7836a;*/
	margin-bottom: 10rpx;
	color: #fff;
	font-weight: bold;
	border-top-left-radius:0;
	border-bottom-left-radius:0;
}

.SP-block .stock-cancel{
	width:100%;
	background: #000;
	margin-bottom: 10rpx;
	color: #fff;
	font-weight: bold;
	border-top-right-radius:0;
	border-bottom-right-radius:0;
}