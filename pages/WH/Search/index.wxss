.search_block{
    width: 100%;
    height: 280rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-bottom: 10rpx solid #EEE;
    /*background: pink;*/
}
.search_item{
    width: calc(100% - 20rpx);
    height: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 30rpx;
    padding: 0 10rpx;
    /*justify-content: center;*/
}
.search_item input{
    width: 80%;
}
.se_name{
    height: 100%;
    line-height: 80rpx;
}
.goSearch{
    width: 98%;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #609ddc;
    margin: 0 auto;
    border-radius: 15rpx;
    margin-top: 20rpx;
}
.goSearch image{
    width: 40rpx;
    height: 40rpx;
}
picker{
    width: 100%;
    font-size: 30rpx;
}

.orderListItem{
	width: calc(100% - 20rpx);
	display: flex;
    flex-direction: row;
	align-items: center;
	border-bottom: 1px solid #eee;
	padding: 18rpx 10rpx;
}
.bellImg{
	width:100rpx;
	display: flex;
	align-content: center;
	justify-content: center;
}
.bellImg image{
	width: 80rpx;
	height: 80rpx;
	display: block;
	margin-left: 15rpx;
}
.orderCont{
	width:calc(100% - 200rpx);
	
}
.orderCont text{
	display: block;
	margin: 12rpx;
}
.samlF{
	font-size: 30rpx;
}
.bigF{
	font-size: 30rpx;
}
.orderListItem .mid{
	width:100rpx;
	display: flex;
	align-content: center;
	justify-content: center;
}
.orderListItem .mid{
    font-size: 30rpx;
}
.orderListItem .right{
	width:100rpx;
	display: flex;
	align-content: center;
	justify-content: center;
}
.orderListItem .right image{
	display: flex;
	float: right;
	margin-right: 10rpx;
	width:80rpx;
	height: 80rpx;
}