.item text{
    width: 100%;
    font-size: 30rpx;
    flex-grow: 1;
}
.item view{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 30rpx;
}
.item input{
    width: 100%;
    font-size: 30rpx;
    flex-grow: 1;
}
.sweight input{
    text-align: left;
}

.strap{
    width: 100%;
    height:4rpx;
    background: #eee;
}
.col{
    background: red;
}
