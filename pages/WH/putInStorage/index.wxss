form{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}
.reason{
    width: 98%;
    height: auto;
    margin: 40rpx auto 120rpx auto;
}
.reason textarea{
    width: calc(100% - 20rpx);
    padding: 10rpx;
    background: #eee;
}

.orderBt{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #E64340;
  border-radius: 0;
  color: #fff;
  font-weight: bold;
  z-index: 10000;
}
.bthover{
  background: #f7836a;
  border-radius: 0;
}