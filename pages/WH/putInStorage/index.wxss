.recycleno{
    width: 100%;
    height: auto;
    display: flex;
    align-items: center;
    background: #FFFACD;
}
.recycleno text{
    width: 100%;
    height: 100%;
    line-height: 100rpx;
    text-align: center;
}
.showInfo{
    width:100%;
    height: auto;
    /*position: relative;*/
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #FFFACD;
}
.submitInfo{
    width:100%;
    height: auto;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 50px;
}

.columnTit{
    width:100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.columnTit text{
    width:100%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 30rpx;
    border: 1px solid #ccc;
}
.columnTit text:nth-of-type(1){
    border-left: 0px solid #ccc;
}
.columnTit text{
    border-right: 0px solid #ccc;
}
.content{
    width:100%;
    height: auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid #ccc;
}
.content input{
    width:100%;
    /*height: 80rpx;*/
    height: 100%;
    text-align:center;
    font-size: 30rpx;
    border-left: 1px solid #ccc;
    /*padding: 0 10rpx;*/
}
.content textarea{
    width:100%;
    height: 100%;
    font-size: 30rpx;
}
