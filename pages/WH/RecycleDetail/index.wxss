.topBlock{
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 100rpx;
    padding: 20rpx;
    border-bottom: 5px solid #eee;
}
.topItem{
    width: 100%;
    font-weight: bold;
    color:#3f51b5;
}

.topItem text{
    text-align: left;
}
.topItem:last-of-type{
    width: 300rpx;
    text-align: right;
}
.mainBlock{
    width: 98%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0 auto;
    
}

.recycleItem{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 200rpx;
    padding: 20rpx;
    /*background: #CAE1FF;*/
    margin-top: 10rpx;
}
