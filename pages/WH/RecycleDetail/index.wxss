.top{
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.percent{
    width: 100%;
    height:20rpx;
    margin: 10rpx;
}
.left{
    width: calc(100% - 100rpx);
    height: 200rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx 5rpx;
}
.right{
    width: 100rpx;
    height: 160rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-left: 2rpx solid #eee;
    margin: 20rpx auto;
}
.right image{
    width: 60rpx;
    height: 60rpx;
    display: flex;
}
.item{
    width: 98%;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 20rpx;
}
