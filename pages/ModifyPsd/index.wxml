<view  class="loginBox">
    <text class="loginT"></text>
    <view class="item">
        <view class="icon">
        <image src="../../images/icon/user.png" />
        </view>
        <view class="userBox">
	    <input  placeholder="用户名" value="{{accountName}}" bindinput="userInfo" bindfocus="changeBorderColor1" class="{{change1? 'changeBorderColor':'normalColor'}}" bindblur="noamrlBorderColor1"/>
        </view>
    </view>
    <view class="item">
        <view class="icon">
        <image src="../../images/icon/password-1.png" />
        </view>
        <view class="userBox">
	    <input password="true" placeholder="新密码" bindinput="newPsdFn" bindfocus="changeBorderColor2" class="{{change2? 'changeBorderColor':'normalColor'}}" bindblur="noamrlBorderColor2"/>
        </view>
    </view>
    <view class="item">
        <view class="icon">
        <image src="../../images/icon/password-2.png" />
        </view>
        <view class="psdBox">
	    <input password="true" placeholder="确认密码" bindinput="confirmPsdFn" bindfocus="changeBorderColor3" class="{{change3? 'changeBorderColor':'normalColor'}}" bindblur="noamrlBorderColor3"/>
        </view>
    </view>
    <button bindtap="saveNewPsd"  class="apply-add" hover-class="hoverClass">保存</button>
</view>