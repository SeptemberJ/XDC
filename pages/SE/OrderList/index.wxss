.orderListWrap{
	width: 100%;
	display: flex;
    flex-direction: column;
	align-items: center;
}
.orderListItem{
	width: 94%;
	margin:20rpx auto;
	padding: 10rpx;
	background: #fff;
	border:2px solid #eee;
	/*border-radius: 25rpx;*/
	-moz-box-shadow: 0px 0px 15px #DCDCDC; 
	box-shadow: 0px 0px 15px #DCDCDC;
	/*border-top-left-radius: 25rpx;
	border-top-right-radius: 25rpx;*/

}
.item{
	width: 100%;
	display: flex;
    flex-direction: row;
	align-items: center;
	
}

/*top*/
.itemTop{
	margin-top: 20rpx;
}
.itemTop text{
	flex-grow: 1;
	/*padding: 10rpx;*/
	font-size: 30rpx;
	color: #666;
}
.itemTop text:nth-child(2){
	text-align: right;
}

/*mid*/
.itemMid{
	margin-top: 20rpx;
	/*margin-bottom: 20rpx;*/
	
}

.itemMid text{
	flex-grow: 1;
	/*padding: 10rpx;*/
	font-size: 30rpx;
	color: #666;
}
.itemMid text:nth-child(2){
	text-align: right;
}

/*foot*/
.itemFoot{
	display: flex;
    flex-direction: column;
	align-items: center;
	margin-top: 30rpx;
	padding-top: 10rpx;
	border-top: 30rpx solid #fff;
	border-image: url('https://www.4008803828.com/wscxm/image/strap2.jpg') 30 30 round;
}
.itemFoot .header{
	width: 100%;
	display: flex;
    flex-direction: row;
	align-items: center;
}
.itemFoot .header text{
	flex-grow: 5;
	padding: 10rpx;
	font-size: 30rpx;
	color: #666;
}
.itemFoot .header text:nth-child(2){
	text-align: right;
}
.itemFoot .summary{
	width: 100%;

}
.itemFoot .summary text{
	padding: 10rpx;
	font-size: 30rpx;
	color: #666;
}
